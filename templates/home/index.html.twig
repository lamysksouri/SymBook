{% extends 'base.html.twig' %}
{% block body %}

<html>
<head>
    <meta charset="UTF-8">
    <title>List of the books</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="bootstrap.css">
    <style>
        .search-form {
            margin-bottom: 20px;
        }

        .search-form .input-group {
            display: flex;
            align-items: center;
        }

        .search-form .input-group input[type="text"] {
            border-radius: 5px;
        }

        .search-form .input-group button {
            border-radius: 5px;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 10px;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-size: 1.2rem;
        }

        .card-text {
            font-size: 1rem;
            color: #6c757d;
        }

        .prix {
            font-size: 1.1rem;
        }

        .cart-icon {
            width: 30px;
            height: 30px;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">List of the books</h1>
    <form action="#" method="GET" class="search-form">
        <div class="input-group input-group-sm">
            <input type="text" name="query" class="form-control" placeholder="Rechercher...">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </form>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100">
                <img src="https://www.edition-originale.com/media/livres_anciens.jpg" class="card-img-top" alt="Image de livre">
                <div class="card-body">
                    <h3 class="card-title">Title 1</h3>
                    <p class="card-text">Author: Author 1</p>
                    <h4 class="card-text">Price: <span class="prix">20 €</span></h4>
                    <p class="card-text text-success">In stock</p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary btn-animated">Details</a>
                    <a href="#"><img src="https://www.kalys-designstore.com/wp-content/uploads/2018/07/K135-2.jpg" alt="Add to cart" class="cart-icon ml-2"></a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="https://www.edition-originale.com/media/livres_anciens.jpg" class="card-img-top" alt="Image de livre">
                <div class="card-body">
                    <h3 class="card-title">Title 2</h3>
                    <p class="card-text">Author: Author 2</p>
                    <h4 class="card-text">Price: <span class="prix">25 €</span></h4>
                    <p class="card-text text-warning">Limited quantity</p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary btn-animated">Details</a>
                    <a href="#"><img src="https://www.kalys-designstore.com/wp-content/uploads/2018/07/K135-2.jpg" alt="Add to cart" class="cart-icon ml-2"></a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="https://www.edition-originale.com/media/livres_anciens.jpg" class="card-img-top" alt="Image de livre">
                <div class="card-body">
                    <h3 class="card-title">Title 3</h3>
                    <p class="card-text">Author: Author 3</p>
                    <h4 class="card-text">Price: <span class="prix">30 €</span></h4>
                    <p class="card-text text-danger">Out of stock</p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary btn-animated">Details</a>
                    <a href="#"><img src="https://www.kalys-designstore.com/wp-content/uploads/2018/07/K135-2.jpg" alt="Add to cart" class="cart-icon ml-2"></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Pagination -->
    <div class="mt-5">
        <nav aria-label="Pagination">
            <ul class="pagination">
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
</body>
</html>
{% endblock %}
