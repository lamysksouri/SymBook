{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-header text-center">
                <h1>Please Register</h1>
            </div>
            <div class="card-body">
                {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="mb-3">
                        {{ form_errors(registrationForm) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.gender) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.phoneNumber) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.address) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
            <div class="card-footer text-muted text-center">
                Do you already have an account? <a href="{{ path('app_login') }}">Click here to login</a>
            </div>
        </div>
    </div>
{% endblock %}
